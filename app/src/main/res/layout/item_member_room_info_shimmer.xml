<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" >

        <TextView
            android:id="@+id/tv_room_name_shimmer"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="@string/room_info"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:drawablePadding="4dp" />

        <TextView
            android:id="@+id/tv_title_room_followers_shimmer"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_room_name_shimmer"
            android:layout_margin="2dp"
            android:drawablePadding="4dp"
            android:background="@color/darker_gray" />

        <TextView
            android:id="@+id/tv_room_followers_shimmer"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_room_name_shimmer"
            android:layout_toEndOf="@id/tv_title_room_followers_shimmer"
            android:background="@color/darker_gray"
            android:layout_margin="2dp"
            android:drawablePadding="4dp" />

        <TextView
            android:id="@+id/tv_title_room_level_shimmer"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_room_followers_shimmer"
            android:background="@color/darker_gray"
            android:layout_margin="2dp"
            android:drawablePadding="4dp" />

        <TextView
            android:id="@+id/tv_room_level_shimmer"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_room_followers_shimmer"
            android:layout_toEndOf="@id/tv_title_room_level_shimmer"
            android:background="@color/darker_gray"
            android:layout_margin="2dp"
            android:drawablePadding="4dp" />

        <TextView
            android:id="@+id/tv_title_room_category_shimmer"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_room_level_shimmer"
            android:background="@color/darker_gray"
            android:layout_margin="2dp"
            android:drawablePadding="4dp" />

        <TextView
            android:id="@+id/tv_room_category"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_room_level_shimmer"
            android:layout_toEndOf="@id/tv_title_room_category_shimmer"
            android:background="@color/darker_gray"
            android:layout_margin="2dp"
            android:drawablePadding="4dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>